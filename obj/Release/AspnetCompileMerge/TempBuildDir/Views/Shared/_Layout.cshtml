                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <li>@Html.ActionLink("Fruit", "Index", "Shop", new { area = "", category = "Fruit" }, new { })</li>
                            <li>@Html.ActionLink("Vegetables", "Index", "Shop", new { area = "", category = "Vegetables" }, new { })</li>
                            <li>@Html.ActionLink("Nuts", "Index", "Shop", new { area = "", category = "Nuts" }, new { })</li>
